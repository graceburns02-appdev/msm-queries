<h1>
  Actor #<%= @the_actor.id %> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_movie/<%= @the_actor.id %>" class="btn btn-block btn-outline-secondary">
  Delete actor
</a>

<hr>

<dl>
  <dt>Name</dt>
  <dd> <%= @the_actor.name %> </dd>

  <dt>Dob</dt>
  <dd> <%= @the_actor.dob %> </dd>

  <dt>Bio</dt>
  <dd> <%= @the_actor.bio %> </dd>

  <dt>Image</dt>
  <dd> <img src="http://robohash.org/<%= @the_actor.name %>"> </dd>

  <dt>Created at</dt>
  <dd> <%= time_ago_in_words(@the_actor.created_at) %>  </dd>

  <dt>Updated at</dt>
  <dd> <%= time_ago_in_words(@the_actor.updated_at) %> </dd>

</dl>

<hr>

<h2>
  Filmography
</h2>


<table border="1">
  <% @character.each do |a_thing| %>
      <tr>
        <td>
          <% m = Movie.where({:id => a_thing.movie_id}).at(0) %>
          <%= m.title %>
        </td>

        <td>
          <% m = Movie.where({:id => a_thing.movie_id}).at(0) %>
          <%= m.year %>
        </td>
        <td>
          <% m = Movie.where({:id => a_thing.movie_id}).at(0) %>
          <% d = Director.where({:id => m.director_id}).at(0) %>
          <%= d.name %>
        </td>
        <td>
          <%= a_thing.name %>
        </td>
        <td>
          <% m = Movie.where({:id => a_thing.movie_id}).at(0) %>
          <a href="/movies/<%= m.id %>">
            Show details
          </a>
        </td>
      </tr>
  <% end %>
</table>
